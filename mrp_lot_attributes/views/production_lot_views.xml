<?xml version="1.0"?>

<openerp>
    <data>
        <!-- agregar atributos al lote de entrada -->
        <record id="view_production_lot_form_simple" model="ir.ui.view">
            <field name="name">LOT ATTRIBUTES add attributes</field>
            <field name="model">stock.production.lot</field>
            <field name="priority">1</field>
            <field name="inherit_id"
                   ref="stock.view_production_lot_form_simple"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_group']" position="after">
                    <group name="attributes" col="2">
                        <group col="2">
                            <field name="colada"/>
                            <field name="tt"/>
                            <field name="paquete"/>
                        </group>
                        <group col="2">
                            <field name="ot"/>
                            <field name="remito_proveedor"/>
                            <field name="fecha_remito"/>
                            <field name="aceria"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- agregar atributos al lote -->
        <record id="view_production_lot_form" model="ir.ui.view">
            <field name="name">LOT ATTRIBUTES lot attributes</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.view_production_lot_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='main_group']" position="after">
                    <group name="attributes" col="2">
                        <group col="2">
                            <field name="colada"/>
                            <field name="tt"/>
                            <field name="paquete"/>
                        </group>
                        <group col="2">
                            <field name="ot"/>
                            <field name="remito_proveedor"/>
                            <field name="fecha_remito"/>
                            <field name="aceria"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>

        <!-- busqueda de lotes por atributos -->
        <record id="search_product_lot_filter" model="ir.ui.view">
            <field name="name">LOT ATTRIBUTES add filter attributes</field>
            <field name="model">stock.production.lot</field>
            <field name="inherit_id" ref="stock.search_product_lot_filter"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="colada"/>
                    <field name="tt"/>
                    <field name="paquete"/>
                    <field name="remito_proveedor"/>
                    <field name="fecha_remito"/>
                </xpath>
            </field>
        </record>

    </data>
</openerp>
