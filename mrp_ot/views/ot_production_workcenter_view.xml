<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="mrp_production_workcenter_form_view_inherit"
            model="ir.ui.view">
        <field name="name">MRP_OT agregar cantidad y operador en workcenter</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workcenter_form_view_inherit"/>
        <field name="arch" type="xml">
            <xpath expr="//tree/field[@name='user_id']" position="after">
                <field name="qty"/>
            </xpath>

            <xpath expr="//field[@name='qty_producing']" position="after">
                <label for="date_start1" string="Inicio"/>
                <div>
                    <field name="date_start1" class="oe_inline"/> -
                    <field name="time_start"
                           widget="timepicker"
                           options="{'datepicker': {'stepping': 10}}"
                           class="oe_inline"/>
                </div>

                <label for="date_end" string="Fin"/>
                <div>
                    <field name="date_end" class="oe_inline"/> -
                    <field name="time_end"
                           widget="timepicker"
                           options="{'datepicker': {'stepping': 10}}"
                           class="oe_inline"/>
                </div>
                <field name="operator_id" attrs="{'required': True}"/>
            </xpath>

            <field name="user_id" position="attributes">
                <attribute name="invisible">1</attribute>
            </field>
            <field name="user_id" position="after">
                <field name="operator_id"/>
            </field>
        </field>
    </record>

    <record id="mrp_production_workcenter_tree_view_inherit" model="ir.ui.view">
        <field name="name">MRP_OT agregar ot</field>
        <field name="model">mrp.workorder</field>
        <field name="inherit_id" ref="mrp.mrp_production_workcenter_tree_view_inherit"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="string">Operacion</attribute>
            </xpath>

            <xpath expr="//field[@name='name']" position="before">
                <field name="ot"/>
            </xpath>

        </field>
    </record>

</odoo>
